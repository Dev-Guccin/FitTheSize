<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gomypage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:onClick="onClicknew1"
            android:text="My"></Button>


        <TextView
            android:id="@+id/AppName"
            style="@style/myStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="FIT THE SIZE"
            android:textColor="#101010"
            android:textStyle="bold|italic" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout">

        <Spinner
            android:id="@+id/spinner01"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:entries="@array/ARRAY02" />

        <Spinner
            android:id="@+id/pantsPart"
            android:layout_width="124dp"
            android:layout_height="47dp"
            android:baselineAligned="false"
            android:entries="@array/ARRAY01" />

        <EditText
            android:id="@+id/pantsSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="사이즈 입력"
            android:textColor="#605E5E"
            android:textColorHint="#4A4848"></EditText>

        <TextView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:text="cm"
            android:textColor="#000000"></TextView>
<!--결과 표시를 위해 검색 버튼 잠시 주석처리 해두었습니다 ㅠㅠ-->
        <!-- 임시 버튼 -->
        <Button
            android:id="@+id/gosearchA"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="검색"
            android:textSize="15dp" />
        <!-- 원래 있던 버튼
        <Button
            android:id="@+id/gosearchA"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:onClick="onClicknew2"
            android:text="검색"
            android:textSize="15dp" />
            -->
    </LinearLayout>

<!-- 일단 테스트용으로 결과를 메인에 띄우기 위해 생성한 임시 레이아웃 입니다 지우셔도 됩니다-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/searchResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>

    </LinearLayout>


</LinearLayout>
